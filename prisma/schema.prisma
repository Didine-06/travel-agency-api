// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Language {
  isoCode   String @id @map("iso_code")
  name      String
  isActive  Boolean @default(true) @map("is_active")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users User[]

  @@map("languages")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  password   String
  firstName  String?  @map("first_name")
  lastName   String?  @map("last_name")
  role       UserRole @default(CLIENT)
  isActive   Boolean  @default(true) @map("is_active")
  languageId String   @default("en") @map("language_id")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")

  language      Language       @relation(fields: [languageId], references: [isoCode], onDelete: Restrict)
  customer      Customer?
  notifications Notification[]

  @@map("users")
}

enum UserRole {
  CLIENT
  AGENT
  ADMIN
}

model Customer {
  id          String    @id @default(uuid())
  userId      String    @unique @map("user_id")
  phone       String?
  address     String?
  city        String?
  country     String?
  dateOfBirth DateTime? @map("date_of_birth")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  user     User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  bookings Booking[]

  @@map("customers")
}

model Destination {
  id          String   @id @default(uuid())
  name        String
  country     String
  city        String?
  description String?
  imageUrl    String?  @map("image_url")
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  packages Package[]

  @@map("destinations")
}

model Package {
  id                String   @id @default(uuid())
  destinationId     String   @map("destination_id")
  title             String
  description       String?
  duration          Int
  price             Decimal  @db.Decimal(10, 2)
  includedServices  Json?    @map("included_services")
  availableFrom     DateTime @map("available_from")
  availableTo       DateTime @map("available_to")
  maxCapacity       Int      @map("max_capacity")
  isActive          Boolean  @default(true) @map("is_active")
  createdAt         DateTime @default(now()) @map("created_at")
  updatedAt         DateTime @updatedAt @map("updated_at")

  destination Destination @relation(fields: [destinationId], references: [id], onDelete: Cascade)
  bookings    Booking[]

  @@map("packages")
}

model Booking {
  id               String        @id @default(uuid())
  customerId       String        @map("customer_id")
  packageId        String        @map("package_id")
  numberOfAdults   Int           @map("number_of_adults")
  numberOfChildren Int           @default(0) @map("number_of_children")
  totalPrice       Decimal       @map("total_price") @db.Decimal(10, 2)
  bookingDate      DateTime      @default(now()) @map("booking_date")
  travelDate       DateTime      @map("travel_date")
  status           BookingStatus @default(PENDING)
  createdAt        DateTime      @default(now()) @map("created_at")
  updatedAt        DateTime      @updatedAt @map("updated_at")

  customer Customer  @relation(fields: [customerId], references: [id], onDelete: Cascade)
  package  Package   @relation(fields: [packageId], references: [id], onDelete: Cascade)
  payments Payment[]

  @@map("bookings")
}

enum BookingStatus {
  PENDING
  CONFIRMED
  CANCELLED
  COMPLETED
}

model Payment {
  id                   String            @id @default(uuid())
  bookingId            String            @map("booking_id")
  amount               Decimal           @db.Decimal(10, 2)
  paymentDate          DateTime          @default(now()) @map("payment_date")
  paymentMethod        PaymentMethod     @map("payment_method")
  paymentType          PaymentType       @map("payment_type")
  transactionReference String?           @map("transaction_reference")
  notes                String?
  createdAt            DateTime          @default(now()) @map("created_at")
  updatedAt            DateTime          @updatedAt @map("updated_at")

  booking Booking @relation(fields: [bookingId], references: [id], onDelete: Cascade)

  @@map("payments")
}

enum PaymentMethod {
  CASH
  CARD
  TRANSFER
  CHECK
}

enum PaymentType {
  DEPOSIT
  FULL
  INSTALLMENT
}

model Notification {
  id        String   @id @default(uuid())
  userId    String   @map("user_id")
  type      String
  title     String
  message   String
  isRead    Boolean  @default(false) @map("is_read")
  createdAt DateTime @default(now()) @map("created_at")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("notifications")
}
